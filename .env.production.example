# Production Environment Variables for Vercel
# Copy these to your Vercel project settings: https://vercel.com/[your-project]/settings/environment-variables

# Database (REQUIRED)
DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require"

# AI Services (REQUIRED for game generation)
OPENAI_API_KEY="sk-..."
ANTHROPIC_API_KEY="sk-ant-..."
VENICE_API_KEY="..."

# Base Network RPC (REQUIRED for blockchain interactions)
BASE_RPC_URL="https://mainnet.base.org"

# Neynar API (REQUIRED for Farcaster features)
NEYNAR_API_KEY="..."

# WalletConnect (REQUIRED for browser wallet support)
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID="..."

# Smart Contract Addresses (already public in code)
NEXT_PUBLIC_GAME_NFT_ADDRESS="0x778C87dAA2b284982765688AE22832AADae7dccC"
NEXT_PUBLIC_WRITER_COIN_PAYMENT_ADDRESS="0xf11822F99FF5f6982d42d4A0923d2b3f9589fA75"
NEXT_PUBLIC_GAME_NFT_CHAIN_ID="8453"

# NextAuth (optional, for future session management)
NEXTAUTH_SECRET="generate-a-random-secret"
NEXTAUTH_URL="https://your-domain.vercel.app"
