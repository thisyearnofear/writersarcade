# Database
# Required for production - set to your production database URL (e.g., Neon, Railway, etc.)
# Example for Neon: postgresql://username:password@ep-example-123.us-east-1.aws.neon.tech/writarcade?sslmode=require
DATABASE_URL="postgresql://username:password@localhost:5432/writarcade"

# Site URL (Client-side)
# Used for OpenGraph and Twitter Card meta tags
# Set to your production domain (e.g., https://writarcade.vercel.app)
NEXT_PUBLIC_SITE_URL="https://writarcade.vercel.app"

# Neynar API (Server-side only - DO NOT expose to client)
# Used in /api/farcaster/profile for Farcaster user profile lookup
NEYNAR_API_KEY="your-neynar-api-key"

# WalletConnect Project ID (Client-side)
# Used in Web3Provider for RainbowKit wallet connections
# Get this from https://cloud.walletconnect.com
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID="your-walletconnect-project-id"

# Smart Contract Addresses (safe to expose - read-only)
# Used in lib/contracts.ts for contract interactions

# Base Sepolia (Testnet)
NEXT_PUBLIC_WRITER_COIN_PAYMENT_SEPOLIA="0x..."
NEXT_PUBLIC_GAME_NFT_SEPOLIA="0x..."

# Base Mainnet (Production)
NEXT_PUBLIC_WRITER_COIN_PAYMENT_MAINNET="0xf11822F99FF5f6982d42d4A0923d2b3f9589fA75"
NEXT_PUBLIC_GAME_NFT_MAINNET="0x778C87dAA2b284982765688AE22832AADae7dccC"
NEXT_PUBLIC_WRITER_COIN_PAYMENT_ADDRESS="0xf11822F99FF5f6982d42d4A0923d2b3f9589fA75"
NEXT_PUBLIC_GAME_NFT_ADDRESS="0x778C87dAA2b284982765688AE22832AADae7dccC"

# Network Chain IDs (safe to expose)
NEXT_PUBLIC_BASE_SEPOLIA_CHAIN_ID="84532"
NEXT_PUBLIC_BASE_MAINNET_CHAIN_ID="8453"

# Venice AI API Key (Server-side only - DO NOT expose to client)
# Used in /api/generate-image for secure image generation
VENICE_API_KEY="your-venice-api-key"

# Story Protocol Integration (Client-Side)
# Users sign IP registration with their own wallets (no server keys needed)
# Faucet for testnet tokens: https://faucet.story.foundation/

# Story Protocol Network ("testnet" or "mainnet")
# Testnet Chain ID: 1315 (Aeneid)
# Mainnet Chain ID: 1513
NEXT_PUBLIC_STORY_NETWORK="testnet"

# SPG (Story Protocol Gateway) Contract for fast minting
# Default testnet: 0xc32A8a0FF3beDDDa58393d022aF433e78739FAbc
NEXT_PUBLIC_STORY_SPG_CONTRACT="0xc32A8a0FF3beDDDa58393d022aF433e78739FAbc"

# Enable/disable Story Protocol UI (for development)
NEXT_PUBLIC_STORY_ENABLED="true"

# IPFS Storage (for game/asset metadata)
# Using Pinata - https://www.pinata.cloud
PINATA_JWT="your-pinata-jwt-token"
IPFS_GATEWAY="https://gateway.pinata.cloud"